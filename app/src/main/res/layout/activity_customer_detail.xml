<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:layout_height="match_parent"
    android:background="#D8D8D8">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstlayout">

        <LinearLayout


            android:layout_margin="20dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text=""
                android:singleLine="true"
                android:minWidth="150dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/ref_no" />

            <Button
                android:layout_margin="5dp"
                android:background="#99CCFF"
                android:textColor="#000000"
                android:layout_weight="2"
                android:id="@+id/scan"
                android:typeface="serif"
                android:fontFamily="ari"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scan" />

            <Button
                android:layout_margin="2dp"
                android:textColor="#000000"
                android:background="#99CCFF"
                android:layout_weight="3"
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEARCH" />


        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/firstlayout"
        android:visibility="gone"
        android:background="#F2F2F2"
        android:id="@+id/main1"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel1">


                    <ImageView
                        android:background="@drawable/icon"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:id="@+id/imageView" />

                    <TextView
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:id="@+id/emp_id_value1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0B3861"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="Customer Details" />

                    <TextView
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:id="@+id/firstname_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1C1C1C"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="" />

                    <TextView
                        android:padding="3dp"
                        android:layout_weight="1"
                        android:id="@+id/client_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0B3861"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Client Id" />

                    <TextView
                        android:padding="3dp"
                        android:layout_weight="2"
                        android:id="@+id/client_id_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1C1C1C"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:text="" />


                    <TextView
                        android:padding="3dp"
                        android:layout_weight="2"
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0B3861"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Email" />

                    <TextView
                        android:padding="3dp"
                        android:layout_weight="2"
                        android:id="@+id/email_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1C1C1C"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:text="" />


                    <TextView
                        android:padding="3dp"
                        android:layout_weight="3"
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0B3861"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Mobile" />

                    <TextView
                        android:padding="3dp"
                        android:layout_weight="3"
                        android:id="@+id/mobile_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1C1C1C"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:text="" />


                    <TextView
                        android:padding="3dp"
                        android:layout_weight="4"
                        android:id="@+id/role"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0B3861"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Role Name" />


                    <TextView
                        android:padding="3dp"
                        android:layout_weight="4"
                        android:id="@+id/role_value"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1C1C1C"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:text="Test" />
                </LinearLayout>






            </LinearLayout>
        </ScrollView>
    </RelativeLayout>



    <LinearLayout
        android:visibility="gone"
        android:layout_below="@+id/main1"
        android:background="#F2F2F2"
        android:id="@+id/btnlayout"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:background="#99CCFF"
            android:layout_weight="1"
            android:id="@+id/sync"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Discrepancy" />

        <Button
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:background="#99CCFF"
            android:layout_weight="2"
            android:id="@+id/work"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SIGNED" />


    </LinearLayout>




</RelativeLayout>
