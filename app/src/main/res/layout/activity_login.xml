<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal|center_vertical"
    android:background="#D8D8D8"
   >

    <RelativeLayout
        android:id="@+id/main"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/log"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/main_lock"

       android:layout_below="@+id/main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lock"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/main_email"
        android:layout_below="@+id/main_lock"
        android:gravity="center_horizontal|center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">




            <RelativeLayout

                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
               android:layout_centerHorizontal="true"
                android:background="#F2F2F2"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/email_relative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/login"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="27sp"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#6E6E6E"
                    />
                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:id="@+id/email_layout"
                    android:layout_below="@+id/login"
                    android:layout_centerHorizontal="true"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#6E6E6E"
                    android:hint="Email"
                    android:textColorHint="#6E6E6E"
                    android:padding="10dp"
                    android:minHeight="40dp"
                    android:background="@drawable/shape"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/password_layout"
                    android:layout_below="@+id/email_layout"
                   android:layout_centerHorizontal="true"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password_edit"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#6E6E6E"
                    android:textColorHint="#6E6E6E"
                    android:minHeight="40dp"
                    android:padding="10dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:background="@drawable/shape"
                    android:ems="7"

                    />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/option_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/password_layout"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">

 <ImageView
    android:id="@+id/option"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/optionenabledicon"
    android:layout_marginTop="10dp"
    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6E6E6E"
                    android:text="Remember Me"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/option"
                    />
                </RelativeLayout>

                <Button
                    android:id="@+id/log"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/option_layout"
                    android:layout_margin="30dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:background="#0174DF"
                    />

                <RelativeLayout

                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/log"
                    android:background="@drawable/bottomimage">

                </RelativeLayout>



            </RelativeLayout>


    </RelativeLayout>





</RelativeLayout>